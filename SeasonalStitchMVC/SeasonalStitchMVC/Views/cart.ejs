<!DOCTYPE html>
<html>
<head>
    <title>Your Cart - Seasonal Stitch</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar">
        <a href="/" class="brand">Seasonal Stitch</a>
        <div class="nav-links">
            <a href="/">Home</a>
            <% if (user && user.role === 'admin') { %>
                <a href="/addHoodie" class="admin-btn">Add New Hoodie</a>
            <% } %>
            <% if (user) { %>
                <span style="color: #fff;">Welcome, <%= user.full_name %></span>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/loginUser">Login</a>
            <% } %>
        </div>
    </nav>

    <div class="container">
        <div class="admin-header">
            <h2>Your Cart</h2>
            <a href="/" class="add-btn">Continue Shopping</a>
        </div>

        <% if (!cart || cart.length === 0) { %>
            <p>Your cart is empty.</p>
        <% } else { %>
            <div class="hoodies-grid">
                <% cart.forEach(item => { %>
                    <div class="hoodie-card">
                        <img src="/images/<%= item.image_url %>" alt="<%= item.name %>">
                        <div class="hoodie-info">
                            <h3><%= item.name %></h3>
                            <p class="price">$<%= Number(item.price).toFixed(2) %></p>
                            <form action="/cart/update/<%= item.hoodie_id %>" method="post" class="form-group" style="margin-bottom: 0;">
                                <label for="qty-<%= item.hoodie_id %>">Quantity</label>
                                <input type="number" id="qty-<%= item.hoodie_id %>" name="quantity" min="1" value="<%= item.quantity %>" />
                                <div class="admin-controls">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </form>
                            <form action="/cart/remove/<%= item.hoodie_id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" style="margin-top: 0.5rem;">Remove</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="admin-controls" style="margin-top: 1.5rem; justify-content: center; gap: 1rem; flex-wrap: wrap;">
                <form action="/cart/clear" method="post">
                    <button type="submit" class="btn btn-danger">Clear Cart</button>
                </form>
                <a href="/checkout" class="btn btn-primary" style="padding: 0.85rem 1.3rem; font-weight: bold;">Proceed to Payment</a>
            </div>
        <% } %>
    </div>
</body>
</html>
